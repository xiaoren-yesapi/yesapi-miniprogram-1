page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.warp{
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: 20rpx;
}
navigator { overflow: hidden;}

.list {margin-bottom: 20rpx;height: 200rpx;position: relative;}
.imgs {float: left;}
.imgs image {display: block; width: 200rpx;height: 200rpx;border-radius: 8px;}

.infos {float: left; width: 480rpx; height: 200rpx;padding: 20rpx 0 0 20rpx;}
.title {font-size: 20px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;}
.date {font-size: 16px;color: rgb(43, 153, 61); position: absolute;bottom: 0;}
.date view{float: left}
.view{float:left;font-size: 12px;color: rgb(172, 170, 170);position: absolute;bottom: 0;text-align: right;
}
.status{font-size: 12px;color: rgb(228, 40, 7);position: absolute;bottom: 0;text-align: left;
}
.loadMore {text-align: center;margin: 30px;color: #aaa;font-size: 16px}

.search-bar{
    width:100%;
    height:100rpx;
    top:0;
    background: #ffffff;
}

.search-bar-warper{
    background:#f0eded;
    height:80rpx;
    margin:0 20rpx;
    border-radius: 10rpx;
    padding-left: 20rpx;
    align-items: center;
    display: flex;
    /*width:100%;*/
}
.aloha{text-align: center;}