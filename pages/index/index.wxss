
.index-swiper {
  height: 15rem;
}

.swiper-item-view {
  width: 100%;
  height: 100%;
}

.index-goods-item {
  float: left;
  width: 100%;
  margin-bottom: 10px;
  overflow: hidden;
}

.index-goods-img-view {
  width: 30%;
  float: left;
  padding-top: 10px;
}

.index-goods-text-view {
  width: 60%;
  float: left;
}

.index-goods-img {
  display: block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 8px;
}

.index-goods-item {
  padding: 0 0.5rem 0.3rem;
  border: rgba(204, 204, 204, 0.021) solid 2px;
  border-radius: 5px;
}

.index-goods-item .index-goods-title {
  font-size: 0.8rem;
  font-weight: bold;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.index-goods-item .index-goods-desc {
  font-size: 0.7rem;
  margin-top: 0.25rem;
  font-weight: 400;
  line-height: 1rem;
  text-align: center;
  vertical-align: 30%;
}

.index-goods-desc-hot {
  color: rgb(226, 19, 19);
  font-size: 0.7rem;
  margin-top: 0.25rem;
  font-weight: 400;
  line-height: 1rem;
  text-align: center;
  vertical-align: 30%;
}

.index-goods-desc {
  color: rgb(255, 196, 118);
}

.index-goods-desc-hot-view {
  height: 1rem;
  border: 1px;
  border-radius: 5px;
  border-style: solid;
  border-color: rgb(255, 5, 5);
  width: 1.5rem;
}

.index-goods-desc-view {
  height: 1rem;
  border: 1px;
  border-radius: 5px;
  border-style: solid;
  border-color: rgb(255, 196, 118);
  width: 1.5rem;
}

.index-goods-btns {
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: text-bottom;
  margin-top: 0.85rem;
  font-size: 0.5rem;
}

.index-goods-btns .pirce {
  text-align: center;
  vertical-align: text-bottom;
  line-height: 1.55rem;
  font-size: 0.7rem;
  font-weight: 400;
  bottom: 0;
}

.index-goods-btns .del_pirce {
  flex: 1;
  margin-left: 0.5rem;
  color: #f5a52a;
  font-size: 0.7rem;
  text-decoration: line-through;
}

.add_heart {
  width: 2.5rem;
  height: 1.4rem;
  font-size: 0.8rem;
  border-radius: 0.2rem;
  border: #f5a52a solid 1px;
  display: flex;
  color: #f5a52a;
  text-align: center;
  align-items: center;
  justify-content: center;
}

.curPageNumber {
  position: fixed;
  bottom: 1rem;
  left: 0;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 0.7rem;
  padding: 0.5rem 0.8rem;
  border-top-right-radius: 0.3rem;
  border-bottom-right-radius: 0.3rem;
}

.swiper-image {
  width: 100%;
}

.swiper {
  height: 40%;
}

.downline {
  margin-bottom: 3.5rem;
  text-align: center;
  font-size: 0.8rem;
}
